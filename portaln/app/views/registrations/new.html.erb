<h2 id="registration_title"><%= t("portaln.registro.cadastrar") %></h2>
                      
<div>
	<% form_for @user, :url => registrations_path, :html => { :method => :post } do |f| -%>
		<%= f.error_messages %>

		<div class="field" style="width: 90%;">
			<%= render :partial => 'registrations/fields', :locals => {:f => f} %>
			<div style="clear: both;"></div>
		</div>
		<div class="buttons">
			<%= f.submit t("portaln.registro.salvar") %>
		</div>
		
		<br/>
		<br/>       
		
	<% end -%>
	
</div>