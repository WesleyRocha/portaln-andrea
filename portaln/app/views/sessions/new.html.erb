<%= javascript_include_tag 'views/sessions/new' %>

<div id="login_panel">
	  
	<h3 id="login_title"><%= t("portaln.logged_in.login") %></h3>
	<%= render :partial => 'layouts/flash_notice' %>
	
	<div id="login_form">
		<% form_for resource_name, resource, :url => session_path(resource_name) do |f| -%>
			<div class="field">
			  <%= f.text_field :email, :value => t("activerecord.attributes.user.email") %>       
				<br/>                       
			  <%= f.password_field :password, :value => t("activerecord.attributes.user.password") %>
		  </div>
                
			<div style="float: right; padding: 0px 12px;">
				<% if devise_mapping.rememberable? -%>
			    <%= f.check_box :remember_me %> <%= f.label :remember_me, nil, :style => "display: inline;" %>
			  <% end -%>              
			</div>
	            
			<div class="buttons" style="padding: 0px 0px 0px 12px;">
		  	<%= f.submit t("portaln.logged_in.login") %>
			</div>
		
		<% end -%>
	</div>
	
<div/>

<br/>
<br/>

<%= render :partial => "shared/devise_links" %>