<%= stylesheet_link_tag "galleryview" %>

<%= javascript_include_tag 'jquery-plugins/jquery.easing.1.3' %>       
<%= javascript_include_tag 'jquery-plugins/jquery.galleryview-2.1.1-pack' %>
<%= javascript_include_tag 'jquery-plugins/jquery.timers-1.2' %>

<%= javascript_include_tag 'views/albuns/galleryview' %>

<div class="galeria">
	<ul id="galleryview">
		<% fotos.each_with_index do |foto, index| %>
			<li>
				<%= image_tag foto.imagem.url(:grande), :title => foto.legenda, :alt => foto.legenda %>
				<% if foto.legenda and (not foto.legenda.empty?) %>
					<div class="panel-overlay">       
						<% if foto.fotografo and (not foto.fotografo.empty?) %>
							<h3><%= foto.fotografo %></h3>
						<% end %>
						<p><%= foto.legenda %><p/>
					</div>                      
				<% end %>
			</li>   
		<% end %>
	</ul>
</div>